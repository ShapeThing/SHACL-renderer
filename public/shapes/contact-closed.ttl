@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix schema: <https://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dash: <http://datashapes.org/dash#> .
@prefix stsr: <http://ontology.shapething.com/shacl-renderer#> .
@prefix stf: <http://ontology.shapething.com/facet#> .
@prefix dbc: <http://dbpedia.org/resource/Category:> .
@prefix faker: <https://fakerjs.dev/> .

<>
  a sh:NodeShape ;
  sh:targetClass schema:Person ;
  sh:closed true ;
  sh:description "This form shows various fields. Notice that some fields are singular and others can have multiple values." ;

  sh:property [
    sh:name "Given name"@en ;
    sh:group <#name> ;
    sh:path schema:givenName ;
    faker:generator faker:person.firstName ;
    sh:minCount 1;
    sh:maxCount 5;
    sh:datatype xsd:string ;
  ];
  sh:property [
    sh:name "Gender"@en ;
    sh:in ( "Male" "Female" ) ;
    sh:maxCount 1;
    sh:path schema:gender ;
  ];
  sh:property [
    sh:name "Family name"@en ;
    sh:group <#name> ;
    faker:generator faker:person.lastName ;
    sh:path schema:familyName ;
    sh:minCount 1;
    sh:maxCount 1;
    sh:datatype xsd:string ;
  ];

  sh:property [
    sh:name "Favorite color"@en ;
    sh:path schema:favoriteColor ;
    sh:datatype stsr:color ;
    sh:maxCount 1;
  ];

  sh:property [
    sh:name "Is human"@en ;
    sh:path schema:isHuman ;
    sh:datatype xsd:boolean ;
    sh:maxCount 1;
  ];

  sh:property [
    sh:name "Icon"@en ;
    sh:path schema:icon ;
    # stsr:collections "fluent-emoji" ;
    sh:datatype <https://iconify.design> ;
  ];

  sh:property [
    sh:name "Knows"@en ;
    sh:description """Lorem ipsum dolor sit amet, consectetur adipiscing elit.

Cras sem lacus, mollis eget velit vel, tempus lobortis ex.""" ;
    sh:path schema:knows ;
    sh:maxCount 4 ;
    stsr:endpoint <https://dbpedia.org/sparql>;
    sh:message "You must select a philosopher of religion" ;
    sh:node [
      sh:property [
        sh:path rdfs:label ;
        sh:minCount 1;
        stsr:purpose stsr:label ;
        sh:languageIn ( "en" ) ;
      ] ;

      sh:property [
        sh:path <http://dbpedia.org/ontology/thumbnail> ;
        stsr:purpose stsr:image ;
      ] ;

      sh:property [
        sh:path <http://purl.org/dc/terms/subject> ;
        sh:hasValue dbc:Philosophers_of_religion ;
      ] ;
    ]
  ] ;

  sh:property [
    sh:name "Children"@en ;
    sh:path schema:child ;
    sh:order 3 ;
    sh:datatype xsd:string ;
    stf:facet stf:CountFacet ;
    stsr:listType stsr:NaturalLanguageList ;
  ];

  sh:property [
    sh:name "Self reference"@en ;
    sh:path schema:selfReference ;
    sh:message "You must reference this document it self" ;
    sh:node [
      sh:property [
        sh:path schema:givenName ;
        sh:minCount 1;
      ] ;
    ]
  ];

  sh:property [
    sh:name "Date of birth"@en ;
    sh:path schema:birthDate ;
    sh:order 2 ;
    sh:editor dash:DatePickerEditor ;
    faker:generator faker:date.birthdate ;
    sh:maxCount 1;
    sh:minCount 1;
    sh:datatype xsd:date ;
  ];

  sh:property [
    sh:name "Address"@en ;
    sh:order 4 ;
    sh:path schema:address ;
    sh:maxCount 1 ;
    sh:node <#addressShape> ;
    # sh:class schema:PostalAddress ;
    sh:nodeKind sh:BlankNode ;
  ];

  # This field is hidden for viewing and editing.
  # In facet mode it renders a search field for the predicates: 
  #   schema:givenName 
  #   schema:familyName 
  #   schema:child
  sh:property [
    sh:name "Search"@en ;
    sh:path [ sh:alternativePath ( 
      schema:givenName 
      schema:familyName 
      schema:child 
    ) ] ;
    sh:datatype xsd:string ;
    sh:order 0 ;
    dash:viewer stsr:HideWidget ;
    dash:editor stsr:HideWidget ;
    stf:facet stf:TextFieldFacet ;
  ];

.

<#name>
	a sh:PropertyGroup ;
	sh:order 1 .

<#street-and-housenumber>
	a sh:PropertyGroup ;
	sh:order 2 .

<#world>
	a sh:PropertyGroup ;
	sh:order 3 .


<#addressShape>
    a sh:NodeShape ;
    sh:targetClass schema:PostalAddress ;
    sh:closed true ;

  	sh:ignoredProperties (rdf:type) ;

    sh:property [
        sh:name "Street"@en ;
        sh:group <#street-and-housenumber> ;
        sh:path schema:streetAddress ;
        faker:generator faker:location.street ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    sh:property [
        sh:name "Postal code"@en ;
        sh:path schema:postalCode ;
        sh:group <#street-and-housenumber> ;
        faker:generator faker:location.zipCode ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    sh:property [
        sh:name "Locality"@en ;
        sh:group <#world> ;
        sh:path schema:addressLocality ;
        faker:generator faker:location.city ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    sh:property [
        sh:name "Region"@en ;
        sh:group <#world> ;
        sh:path schema:addressRegion ;
        faker:generator faker:location.state ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    sh:property [
        sh:name "Country"@en ;
        sh:path schema:addressCountry ;
        faker:generator faker:location.country ;
        sh:group <#world> ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .