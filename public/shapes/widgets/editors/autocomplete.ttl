<#default>
  a sh:NodeShape ;
  sh:targetClass schema:Person ;
  sh:closed true ;

  sh:property [
    sh:name "Knows"@en ;
    sh:description "This reference widget does not have an endpoint registered. Unfortunately some big open data sources do not de-reference well." ;
    sh:path schema:knows ;
    sh:message "You must select something" ;
    sh:node <#knowsFilter> ;
  ];
.

<#knowsFilter>
      sh:property [
        sh:path [ sh:alternativePath ( rdfs:label schema:name dcterms:title ) ] ;
        sh:minCount 1;
        stsr:purpose stsr:label ;
      ] ;

      sh:property [
        stsr:purpose stsr:image ;
        sh:path [ sh:alternativePath ( <http://dbpedia.org/ontology/thumbnail> schema:image <http://xmlns.com/foaf/0.1/img> ) ] ;
      ] ;
.
